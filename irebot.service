; /etc/systemd/system/irebot.service

[Unit]
Description=irebot
After=network-online.target

[Service]
Type=simple
WorkingDirectory=/home/ubuntu/IreBot/
ExecStart=/home/ubuntu/IreBot/.venv/bin/python3.12 main.py
User=ubuntu
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target